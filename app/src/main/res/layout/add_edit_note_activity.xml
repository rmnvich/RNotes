<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
            name="viewmodel"
            type="rmnvich.apps.notes.presentation.ui.activity.addeditnote.AddEditNoteViewModel" />
    </data>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:refreshing="@{viewmodel.bIsShowingProgressBar}">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/dashboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:elevation="0dp"
                app:layout_constraintBottom_toTopOf="@id/et_text"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    app:navigationIcon="@drawable/ic_action_arrow_back"
                    app:titleTextColor="@color/colorWhite" />
            </android.support.design.widget.AppBarLayout>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="top"
                android:hint="@string/start_writing"
                android:inputType="textCapSentences|textMultiLine"
                android:paddingLeft="@dimen/edittext_horizontal_padding"
                android:paddingRight="@dimen/edittext_horizontal_padding"

                android:text="@={viewmodel.noteText}"
                app:layout_constraintBottom_toTopOf="@id/card_view_tools"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/appbar"
                app:met_hideUnderline="true" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/card_view_tools_elevation"
                app:contentPadding="@dimen/card_view_tools_padding"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_text">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <rmnvich.apps.notes.presentation.ui.custom.CircleView
                        android:id="@+id/circle_view_color"
                        android:layout_width="@dimen/card_view_tools_circle_view_size"
                        android:layout_height="@dimen/card_view_tools_circle_view_size"
                        app:circleColor="@{viewmodel.noteColor.get()}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <include
                        layout="@layout/item_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="@{viewmodel.noteTag.get() == null ? View.INVISIBLE : View.VISIBLE}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tag="@{viewmodel.noteTag.get()}" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/fab_margin"
                android:onClick="@{(view) -> viewmodel.insertOrUpdateNote()}"
                android:src="@drawable/ic_action_check_inverted"
                app:layout_constraintBottom_toTopOf="@id/card_view_tools"
                app:layout_constraintEnd_toEndOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</layout>