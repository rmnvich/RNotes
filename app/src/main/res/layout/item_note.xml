<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.TextUtils" />

        <import type="android.view.View" />

        <import type="rmnvich.apps.notes.presentation.utils.DateHelper" />

        <variable
            name="note"
            type="rmnvich.apps.notes.domain.entity.Note" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/item_note_vertical_margin"
        android:layout_marginVertical="@dimen/item_note_vertical_margin"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/item_note_card_corner_radius"
        app:contentPadding="@dimen/item_note_card_padding"
        tools:targetApi="o">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/note_text"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_note_text_margin_top"
                android:alpha="0.9"
                android:ellipsize="end"
                android:maxLines="5"
                android:text="@{note.text}"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/note_timestamp" />

            <TextView
                android:id="@+id/note_timestamp"
                style="@style/TextAppearance.Compat.Notification.Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.9"
                android:text="@{DateHelper.convertLongTimeToString(note.timestamp)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <rmnvich.apps.notes.presentation.ui.custom.CircleView
                android:id="@+id/note_circle_color"
                android:layout_width="@dimen/item_note_circle_color_size"
                android:layout_height="@dimen/item_note_circle_color_size"
                android:layout_marginTop="@dimen/item_note_circle_margin_top"
                app:circleColor="@{note.color}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/note_divider_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/note_text" />

            <View
                android:id="@+id/note_divider_left"
                android:layout_width="0dp"
                android:layout_height="@dimen/item_note_divider_height"
                android:layout_marginStart="@dimen/item_note_divider_horizontal_margin"
                android:layout_marginTop="@dimen/item_note_circle_margin_top"
                android:background="@drawable/divider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/note_tag"
                app:layout_constraintStart_toEndOf="@id/note_circle_color"
                app:layout_constraintTop_toBottomOf="@id/note_text" />

            <TextView
                android:id="@+id/note_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/item_note_divider_horizontal_margin"
                android:layout_marginTop="@dimen/item_note_circle_margin_top"
                android:layout_marginEnd="@dimen/item_note_divider_horizontal_margin"
                android:alpha="0.8"
                android:background="@drawable/item_tag_background"
                android:paddingStart="@dimen/item_note_tag_horizontal_padding"
                android:paddingTop="@dimen/item_note_tag_vertical_padding"
                android:paddingEnd="@dimen/item_note_tag_horizontal_padding"
                android:paddingBottom="@dimen/item_note_tag_vertical_padding"
                android:text="@{note.tag.name}"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="italic"
                android:visibility="@{TextUtils.isEmpty(note.tag.name) ? View.GONE : View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/note_divider_right"
                app:layout_constraintStart_toEndOf="@id/note_divider_left"
                app:layout_constraintTop_toBottomOf="@id/note_text" />

            <View
                android:id="@+id/note_divider_right"
                android:layout_width="0dp"
                android:layout_height="@dimen/item_note_divider_height"
                android:layout_marginTop="@dimen/item_note_circle_margin_top"
                android:layout_marginEnd="@dimen/item_note_divider_horizontal_margin"
                android:background="@drawable/divider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/note_button_star"
                app:layout_constraintStart_toEndOf="@id/note_tag"
                app:layout_constraintTop_toBottomOf="@id/note_text" />

            <ToggleButton
                android:id="@+id/note_button_star"
                android:layout_width="@dimen/star_button_smart_size"
                android:layout_height="@dimen/star_button_smart_size"
                android:layout_marginTop="@dimen/item_note_circle_margin_top"
                android:background="@drawable/button_favorite"
                android:checked="@{note.favorite}"
                android:textOff=""
                android:textOn=""
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/note_divider_right"
                app:layout_constraintTop_toBottomOf="@id/note_text" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>