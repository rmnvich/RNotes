<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="rmnvich.apps.notes.presentation.utils.DateHelper" />

        <variable
            name="note"
            type="rmnvich.apps.notes.domain.entity.Note" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/item_note_vertical_margin"
        android:layout_marginVertical="@dimen/item_note_vertical_margin"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/item_note_card_corner_radius"
        app:contentPadding="@dimen/item_note_card_padding"
        tools:targetApi="o">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/note_text"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_note_text_margin_top"
                android:alpha="0.9"
                android:ellipsize="end"
                android:maxLines="5"
                android:text="@{note.text}"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/note_timestamp" />

            <TextView
                android:id="@+id/note_timestamp"
                style="@style/TextAppearance.Compat.Notification.Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.9"
                android:text="@{DateHelper.convertLongTimeToString(note.timestamp)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/note_divider"
                android:layout_width="0dp"
                android:layout_height="@dimen/item_note_divider_height"
                android:layout_marginStart="@dimen/item_note_divider_horizontal_margin"
                android:layout_marginTop="@dimen/item_note_circle_margin_top"
                android:layout_marginEnd="@dimen/item_note_divider_horizontal_margin"
                android:background="@drawable/divider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/star_button"
                app:layout_constraintStart_toEndOf="@id/note_color_tag"
                app:layout_constraintTop_toBottomOf="@id/note_text" />

            <rmnvich.apps.notes.presentation.ui.custom.RoundedTextView
                android:id="@+id/note_color_tag"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_note_circle_color_size"
                android:layout_marginTop="@dimen/item_note_circle_margin_top"
                app:circleColor="@{note.color}"
                app:circleSize="@dimen/item_note_circle_color_size"
                app:cornerRadius="@dimen/item_note_rounded_tv_radius"
                app:labelColor="@color/colorWhite"
                app:labelSize="12sp"
                app:labelText='@{note.tag == null ? "" : "#" + note.tag.name}'
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/note_text" />

            <com.like.LikeButton
                android:id="@+id/star_button"
                android:layout_width="@dimen/star_button_smart_size"
                android:layout_height="@dimen/star_button_smart_size"
                android:layout_marginTop="@dimen/item_note_circle_margin_top"
                app:anim_scale_factor="2"
                app:circle_end_color="@color/colorAccent"
                app:circle_start_color="@color/colorPrimary"
                app:dots_primary_color="@color/colorAccent"
                app:dots_secondary_color="@color/colorPrimary"
                app:icon_size="@dimen/star_button_smart_size"
                app:icon_type="Star"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/note_text"
                app:liked="@{note.favorite}" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>