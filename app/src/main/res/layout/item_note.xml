<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="rmnvich.apps.notes.presentation.utils.DateHelper" />

        <variable
            name="note"
            type="rmnvich.apps.notes.domain.entity.Note" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/item_note_horizontal_margin"
        android:layout_marginVertical="@dimen/item_note_vertical_margin"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/item_note_card_corner_radius"
        app:contentPadding="@dimen/item_note_card_padding"
        tools:targetApi="o">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/note_text"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.9"
                android:ellipsize="end"
                android:maxLines="5"
                android:text="@{note.text}"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/note_timestamp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/note_timestamp"
                style="@style/TextAppearance.Compat.Notification.Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_note_timestamp_margin_top"
                android:alpha="0.9"
                android:text="@{DateHelper.convertLongTimeToString(note.timestamp)}"
                android:textSize="13sp"
                app:layout_constraintBottom_toTopOf="@id/note_tag"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/note_text" />

            <rmnvich.apps.notes.presentation.ui.custom.CircleView
                android:id="@+id/note_circle_view_color"
                android:layout_width="@dimen/item_note_circle_color_size"
                android:layout_height="@dimen/item_note_circle_color_size"
                android:layout_marginTop="@dimen/item_note_circle_margin_top"
                app:circleColor="@{note.color}"
                app:layout_constraintBottom_toBottomOf="@id/note_tag"
                app:layout_constraintEnd_toEndOf="parent" />

            <include
                android:id="@+id/note_tag"
                layout="@layout/item_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="@{note.tag == null ? View.GONE : View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/note_timestamp"
                app:tag="@{note.tag}" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>